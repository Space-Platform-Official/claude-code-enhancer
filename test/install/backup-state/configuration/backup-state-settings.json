{
  "backup_state": {
    "enabled": true,
    "version": "1.0.0",
    "git_hooks": {
      "auto_install": true,
      "preserve_existing": true,
      "hook_timeout": 30
    },
    "atomic_operations": {
      "transaction_timeout": 300,
      "max_concurrent": 3,
      "auto_rollback": true,
      "checkpoint_interval": 10
    },
    "cleanup": {
      "auto_cleanup_age": "7d",
      "keep_archived": "30d",
      "validate_before_push": true,
      "protected_patterns": [
        "*.backup.*",
        ".claude/backup-state/**",
        "**/state.db"
      ]
    },
    "integration": {
      "cleanup_commands": true,
      "orchestrate_commands": true,
      "smart_merge": true,
      "git_workflow": true
    },
    "monitoring": {
      "log_level": "info",
      "enable_metrics": true,
      "alert_on_errors": true,
      "retention_days": 30
    }
  }
}

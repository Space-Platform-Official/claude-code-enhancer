{
  "backup_state": {
    "version": "1.0.0",
    "enabled": true,
    "git_hooks": {
      "auto_install": true,
      "preserve_existing": true,
      "hook_timeout": 30,
      "retry_attempts": 3,
      "hooks": {
        "post_commit": {
          "enabled": true,
          "trigger_state_transition": true
        },
        "post_merge": {
          "enabled": true,
          "confirm_backups": true
        },
        "pre_push": {
          "enabled": true,
          "validate_cleanup": true,
          "block_on_unresolved": true
        }
      }
    },
    "atomic_operations": {
      "enabled": true,
      "transaction_timeout": 300,
      "max_concurrent": 3,
      "auto_rollback": true,
      "checkpoint_interval": 10,
      "lock_timeout": 30,
      "rollback_on_failure": true,
      "preserve_checkpoints": 7
    },
    "state_management": {
      "auto_transition": true,
      "validation_strict": false,
      "cleanup_stale_states": true,
      "state_retention_days": 30,
      "max_states_per_backup": 10
    },
    "cleanup": {
      "auto_cleanup_age": "7d",
      "keep_archived": "30d",
      "validate_before_push": true,
      "protected_patterns": [
        "*.backup.*",
        ".claude/backup-state/**",
        "**/state.db",
        "*.checkpoint.*"
      ],
      "cleanup_on_push": false,
      "aggressive_cleanup": false
    },
    "integration": {
      "cleanup_commands": true,
      "orchestrate_commands": true,
      "smart_merge": true,
      "git_workflow": true,
      "command_wrappers": true
    },
    "monitoring": {
      "log_level": "info",
      "enable_metrics": true,
      "alert_on_errors": true,
      "retention_days": 30,
      "performance_tracking": true,
      "detailed_logging": false
    },
    "security": {
      "validate_file_permissions": true,
      "secure_state_storage": true,
      "encrypt_sensitive_data": false,
      "audit_trail": true
    },
    "performance": {
      "parallel_operations": true,
      "cache_state_queries": true,
      "batch_state_updates": true,
      "optimize_large_repos": true
    }
  }
}

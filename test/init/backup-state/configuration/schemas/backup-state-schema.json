{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Backup State Configuration Schema",
  "type": "object",
  "properties": {
    "backup_state": {
      "type": "object",
      "required": ["version", "enabled"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "enabled": {
          "type": "boolean"
        },
        "git_hooks": {
          "type": "object",
          "properties": {
            "auto_install": {"type": "boolean"},
            "preserve_existing": {"type": "boolean"},
            "hook_timeout": {"type": "integer", "minimum": 1, "maximum": 300}
          }
        },
        "atomic_operations": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "transaction_timeout": {"type": "integer", "minimum": 60, "maximum": 3600},
            "max_concurrent": {"type": "integer", "minimum": 1, "maximum": 10}
          }
        },
        "cleanup": {
          "type": "object",
          "properties": {
            "auto_cleanup_age": {"type": "string", "pattern": "^\\d+[dhm]$"},
            "keep_archived": {"type": "string", "pattern": "^\\d+[dhm]$"},
            "protected_patterns": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
